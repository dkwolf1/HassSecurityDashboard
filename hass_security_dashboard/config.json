{
  "name": "Hass Security Dashboard",
  "version": "0.1.0",
  "slug": "hass_security_dashboard",
  "description": "Security auditing dashboard for Home Assistant",
  "arch": ["amd64", "armv7", "armhf", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "ingress": true,
  "host_network": false,
  "ports": {
    "8123/tcp": 8123
  },
  "ports_description": {
    "8123/tcp": "HTTP Dashboard (alleen als ingress uitstaat)"
  },
  "panel_icon": "shield",
  "panel_title": "Security",
  "options": {
    "port": {
      "type": "integer",
      "default": 8123,
      "minimum": 1024,
      "maximum": 65535
    },
    "use_ingress": {
      "type": "boolean",
      "default": true
    },
    "cloudflare_api_token": {
      "type": "string",
      "default": ""
    }
  },
  "schema": "options"
}
